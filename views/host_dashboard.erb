      <input type="text" value="" name=""><br>
      <button type="submit" class="btn btn-primary">Update profile</button>
    </form>
    <h3>Booking Requests</h3>
    <h3>Your Spaces</h3>
    <% @spaces.each do |hash| %>
      <p><%= hash["spacename"] %> <input type="button" name="Edit" value="Edit"></p>
      <p>---------</p>
    <% end %>
  </body>
